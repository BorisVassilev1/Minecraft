package org.CDnoMlqko.ChatUtils.ui.customEnchantments;

import org.CDnoMlqko.ChatUtils.ui.InventoryGUI;
import org.CDnoMlqko.ChatUtils.utils.Utils;
import org.bukkit.Bukkit;
import org.bukkit.Material;
import org.bukkit.entity.Player;
import org.bukkit.inventory.Inventory;
import org.bukkit.inventory.ItemStack;

public class MainMenu extends InventoryGUI{
	
	public MainMenu() {
		super("Super Enchanting Table", 5);
	}
	
	public Inventory GUI(Player p)
	{
		Inventory toReturn = Bukkit.createInventory(null, inv_cells, inventory_name);
		
		Utils.createItem(inv, Material.COBBLESTONE, 1, slot(5,4), "Exit", "");
		
		Utils.createItem(inv, Material.ENCHANTMENT_TABLE, 1, slot(2,2), "&fCOMMON ENCHANTMENT", "&eCosts: &f" + 25 + " &dMagic Dust");
		Utils.createItemByte(inv, Material.STAINED_GLASS_PANE, 1, 0, slot(2,1), "", "");
		Utils.createItemByte(inv, Material.STAINED_GLASS_PANE, 1, 0, slot(2,3), "", "");
		
		Utils.createItem(inv, Material.ENCHANTMENT_TABLE, 1, slot(4,2), "&9EPIC ENCHANTMENT", "&eCosts: &f" + 50 + " &dMagic Dust");
		Utils.createItemByte(inv, Material.STAINED_GLASS_PANE, 1, 11, slot(4,1), "", "");
		Utils.createItemByte(inv, Material.STAINED_GLASS_PANE, 1, 11, slot(4,3), "", "");
		
		Utils.createItem(inv, Material.ENCHANTMENT_TABLE, 1, slot(6,2), "&6LEGENDARY ENCHANTMENT", "&eCosts: &f" + 100 + " &dMagic Dust");
		Utils.createItemByte(inv, Material.STAINED_GLASS_PANE, 1, 1, slot(6,1), "", "");
		Utils.createItemByte(inv, Material.STAINED_GLASS_PANE, 1, 1, slot(6,3), "", "");
		
		toReturn.setContents(inv.getContents());
		return toReturn;
		
	}
	
	public void clicked(Player p, int slot, ItemStack clicked, Inventory inv)
	{
		if(slot == slot(5,4) - 1)//Exit
		{
			p.closeInventory();
			return;
		}
		if(slot == slot(2,2) - 1)//Common enchantment
		{
			return;
		}
		if(slot == slot(4,2) - 1)//epic enchantment
		{
			return;
		}
		if(slot == slot(6,2) - 1)//legendary enchantment
		{
			return;
		}
		
	}
	
	private static int slot(int x,int y)
	{
		return y * 9 + x;
	}
	
	
}
