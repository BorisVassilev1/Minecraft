package org.CDnoMlqko.ChatUtils.ui.customEnchantments;

import org.CDnoMlqko.ChatUtils.ui.InventoryGUI;
import org.CDnoMlqko.ChatUtils.utils.Utils;
import org.bukkit.Bukkit;
import org.bukkit.Material;
import org.bukkit.entity.Player;
import org.bukkit.inventory.Inventory;
import org.bukkit.inventory.ItemStack;

public class CommonEnchantmentMenu extends InventoryGUI{

	public CommonEnchantmentMenu() {
		super("&fCOMMON ENCHANTMENT", 6);
	}

	@Override
	public Inventory GUI(Player p) {
		Inventory toReturn = Bukkit.createInventory(null, inv_cells, inventory_name);
		
		Utils.createItemByte(inv, Material.STAINED_GLASS_PANE, 1, 0, slot(0, 1), "", "");
		Utils.createItemByte(inv, Material.STAINED_GLASS_PANE, 1, 0, slot(0, 2), "", "");
		Utils.createItemByte(inv, Material.STAINED_GLASS_PANE, 1, 0, slot(0, 3), "", "");
		Utils.createItemByte(inv, Material.STAINED_GLASS_PANE, 1, 0, slot(1, 1), "", "");
		Utils.createItemByte(inv, Material.STAINED_GLASS_PANE, 1, 0, slot(1, 3), "", "");
		Utils.createItemByte(inv, Material.STAINED_GLASS_PANE, 1, 0, slot(2, 1), "", "");
		Utils.createItemByte(inv, Material.STAINED_GLASS_PANE, 1, 0, slot(2, 2), "", "");
		Utils.createItemByte(inv, Material.STAINED_GLASS_PANE, 1, 0, slot(2, 3), "", "");
		
		Utils.createItemByte(inv, Material.STAINED_GLASS_PANE, 1, 4, slot(6, 1), "", "");
		Utils.createItemByte(inv, Material.STAINED_GLASS_PANE, 1, 4, slot(6, 2), "", "");
		Utils.createItemByte(inv, Material.STAINED_GLASS_PANE, 1, 4, slot(6, 3), "", "");
		Utils.createItemByte(inv, Material.STAINED_GLASS_PANE, 1, 4, slot(7, 1), "", "");
		Utils.createItemByte(inv, Material.STAINED_GLASS_PANE, 1, 4, slot(7, 3), "", "");
		Utils.createItemByte(inv, Material.STAINED_GLASS_PANE, 1, 4, slot(8, 1), "", "");
		Utils.createItemByte(inv, Material.STAINED_GLASS_PANE, 1, 4, slot(8, 2), "", "");
		Utils.createItemByte(inv, Material.STAINED_GLASS_PANE, 1, 4, slot(8, 3), "", "");
		
		toReturn.setContents(inv.getContents());
		return toReturn;
	}

	@Override
	public void clicked(Player p, int slot, ItemStack clicked, Inventory inv) {
		
	}

}
