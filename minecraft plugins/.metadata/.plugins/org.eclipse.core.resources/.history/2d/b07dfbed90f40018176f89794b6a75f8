package org.CDnoMlqko.ChatUtils.events;

import org.CDnoMlqko.ChatUtils.Main;
import org.CDnoMlqko.ChatUtils.ui.CustomEnchantmentTableGui;
import org.bukkit.Bukkit;
import org.bukkit.entity.Player;
import org.bukkit.event.EventHandler;
import org.bukkit.event.Listener;
import org.bukkit.event.inventory.InventoryClickEvent;

public class InventoryClickListener implements Listener{
	
	Main plugin;
	
	public InventoryClickListener(Main plugin) {
		this.plugin = plugin;
		
		Bukkit.getPluginManager().registerEvents(this, plugin);
	}
	
	@EventHandler
	public void onClick(InventoryClickEvent e)
	{
		String title = e.getInventory().getTitle();
		if(title.equals(CustomEnchantmentTableGui.inventory_name))
		{
			e.setCancelled(true);
			if(e.getCurrentItem().equals(null))
			{
				return;
			}
			else
			{
				CustomEnchantmentTableGui.clicked((Player) e.getWhoClicked(), e.getSlot(), e.getCurrentItem(), e.getInventory());
			}
		}
	}

}
