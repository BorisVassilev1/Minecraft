package org.CDnoMlqko.ChatUtils.utils;

import java.util.ArrayList;
import java.util.List;

import org.bukkit.ChatColor;
import org.bukkit.Material;
import org.bukkit.inventory.Inventory;
import org.bukkit.inventory.ItemStack;

public class Utils {
	
	public static String chat ( String s)
	{
		return ChatColor.translateAlternateColorCodes('&', s);
	}
	
	public static ItemStack createItem(Inventory inv, int materialId, int amount, int invSlot, String displayName, String... loreString)
	{
		ItemStack item;
		
		List<String> lore = new ArrayList<>();

		item = new ItemStack(Material.getMaterial(materialId))
		
		return item;
	}
	
}
